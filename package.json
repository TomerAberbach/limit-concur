{
  "name": "limit-concur",
  "version": "0.0.0",
  "author": {
    "name": "Tomer Aberbach",
    "email": "tomeraberbach@gmail.com",
    "url": "https://tomeraberba.ch"
  },
  "description": "Limit an async function's concurrency with ease!",
  "keywords": [
    "async",
    "concurrency",
    "limit",
    "limited",
    "promise",
    "await",
    "ratelimit",
    "throttle",
    "rate"
  ],
  "homepage": "https://github.com/TomerAberbach/limit-concur",
  "repository": "TomerAberbach/limit-concur",
  "bugs": {
    "url": "https://github.com/TomerAberbach/limit-concur/issues"
  },
  "license": "Apache-2.0",
  "files": [
    "src"
  ],
  "type": "module",
  "engines": {
    "node": ">= 12.17"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not op_mini all"
  ],
  "exports": "./src/index.js",
  "module": "./src/index.js",
  "types": "./src/index.d.ts",
  "scripts": {
    "lint:prettier:base": "prettier --loglevel silent --ignore-path .gitignore",
    "lint:prettier": "run-s \"lint:prettier:base -- --write .\"",
    "lint:eslint:base": "eslint --cache --ext js --ignore-path .gitignore",
    "lint:eslint": "run-s \"lint:eslint:base -- --fix .\"",
    "lint": "run-s lint:*",
    "test:js": "ava",
    "test:ts": "tsd",
    "test": "run-s test:*",
    "coverage": "c8 run-s test:js"
  },
  "prettier": "@tomer/prettier-config",
  "eslintConfig": {
    "extends": "@tomer"
  },
  "lint-staged": {
    "*.js": [
      "run-s \"lint:prettier:base -- --write {@}\" --",
      "run-s \"lint:eslint:base -- --fix {@}\" --"
    ],
    "*.ts": "run-s \"lint:prettier:base -- --write {@}\" --",
    "*.{json,yml,md}": "run-s \"lint:prettier:base -- --write {@}\" --"
  },
  "ava": {
    "require": [
      "./test/helpers/fast-check.js"
    ]
  },
  "tsd": {
    "directory": "./test"
  },
  "commitlint": {
    "extends": "@commitlint/config-conventional"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.1",
    "@commitlint/config-conventional": "12.1.1",
    "@sinonjs/fake-timers": "7.0.2",
    "@tomer/eslint-config": "0.1.0",
    "@tomer/prettier-config": "0.1.0",
    "ava": "3.15.0",
    "ava-fast-check": "4.0.2",
    "c8": "7.7.0",
    "eslint": "7.23.0",
    "fast-check": "2.14.0",
    "husky": "4.3.8",
    "lint-staged": "10.5.4",
    "npm-run-all": "4.1.5",
    "p-state": "0.2.0",
    "prettier": "2.2.1",
    "tsd": "0.14.0",
    "typescript": "4.2.3"
  }
}
